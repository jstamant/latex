% Left align the sender address and date
\makeatletter
\def\opening#1{\ifx\@empty\fromaddress
  \thispagestyle{firstpage}{\raggedleft\@date\par}
  \else  % home address
  \thispagestyle{empty}{
    \noindent\let \\
    \cr\halign{##\hfil\cr\ignorespaces
      \fromaddress \cr\noalign{\kern 2\parskip}
      \@date\cr}\par}
  \fi
  \vspace{\parskip}{\raggedright \toname \\ \toaddress \par}
  \vspace{2\parskip}
  #1\par\nobreak}
\makeatother

